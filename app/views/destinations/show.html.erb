
<p id="notice"><%= notice %></p>

<p>
	<b>Place:</b>
	<%= @destination.place %>
</p>

<p>
	<b>Description:</b>
	<%= @destination.description %>
</p>

<%if user_signed_in? %>
	<%= link_to 'Edit', edit_destination_path(@destination) %> |
	<%end%>

	<%= link_to 'Back', destinations_path %>

	<div id="reviews">
		<%	@reviews.each do |review|	%>  
		<% user = User.find(review.user_id) %>
		<p><b><%= user.email%></b> said</p>
		<p><%=	review.content %></p>
		<%	end %>
	</div>


	<%if user_signed_in? && @destination.user_id != current_user.id%>
	<div id="review_form">
		<%= form_for([@destination, Review.new]) do |f| %>
		<%= f.label "Write your review:"%><br />
		<%= f.text_area :content %><br />
		<%= f.submit %>
		<% end %>
	</div>               
	<%end%>